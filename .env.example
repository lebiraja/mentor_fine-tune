# ClarityMentor Backend Configuration
# Copy this file to .env and update values as needed

# Server Settings
HOST=0.0.0.0
PORT=2323
DEBUG=False

# Model Paths (in Docker: /app/models)
MODEL_PATH=/app/models

# Redis Configuration (for caching)
REDIS_HOST=cache
REDIS_PORT=6379
REDIS_DB=0

# Voice Configuration
SAMPLE_RATE=16000
CHUNK_SIZE=1024

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/claritymentor.log
